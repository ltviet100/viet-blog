<h2 class="text-center">Welcome to <%= @user.username %>'s profile</h2>
<div class="row">
  <div class="col-md-12">
    <div class="text-center"><%= gravatar_for @user %></div>
    <h3 class="text-center"><%= @user.username %>'s Articles</h3>
    <% @user.articles.each do |article| %>
      <div class="col-md-6 col-md-offset-2">
        <h4><%= article.title %></h4>
        <p><%= truncate(sanitize(article.description, length: 100)) %></p>
      </div>
    <% end %>
  </div>
</div>

