<h2 class="text-center">Welcome to <%= @user.username %>'s profile</h2>

<div class="text-center">
  <%= gravatar_for @user %>
  <h3><%= @user.username %>'s Articles</h3>
</div>

<div class="row">
  <% if @user.articles.any? %>
    <div class="col-md-8 col-md-offset-2">
      <% @user_articles.each do |article| %>
        <div class="well">
          <h4><%= link_to article.title, article_path(article) %></h4>
          <p class="more-info">Created at: <%= time_ago_in_words(article.created_at) %> ago</p>
          <p><%= truncate sanitize(article.description, tags: [], attributes: []), length: 50 %></p>
          <% if article.categories.any? %>
            <p><strong class="more-info">Categories: </strong> <%= render article.categories %></p>
          <% end %>
          <% if current_user == article.user || current_user.admin? %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %>
            <%= link_to 'Remove', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-4 col-md-offset-4">
        <div class="well">
          <h5 style="color: #ef5350;">NO ARTICLE</h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div align="center">
  <%= will_paginate @user_articles %>
</div>

<div align="center">
  <%= link_to 'Back', users_path, class: "btn btn-warning btn-lg" %>
</div>

