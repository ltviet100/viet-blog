<div class="text-center">
  <h2>Authors</h2>
  <h5>Thank you to everyone who has contributed knowledge to Viet's Blog <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></h5>
</div>

<div align="center">
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing-user">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="article-title">
            <%= link_to user.username, user_path(user) %>
          </li>
          <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
