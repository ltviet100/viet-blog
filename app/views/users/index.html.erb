<h2 class="text-center">Authors</h2>
<h5 class="text-center">Thank you to everyone who has contributed knowledge to Viet's Blog <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>.</h5>
<div align="center">

  <ul class="listing-user">
    <div class="row">
      <% @users.each do |user| %>
      <div class="col-md-4 col-md-offset-4 well">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li><h3><%= link_to user.username, user_path(user) %></h3></li>
        <li><p><%= user.email %></p></li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? && current_user.admin? %>
          <li><%= link_to 'Remove this author', user_path(user), method: :delete,
          data: { confirm: "Are you sure remove this author and all their articles?" }, class: "btn btn-danger" %></li>
        <% end %>
      </div>
    </div>
    <% end %>
  </ul>
</div>

<div align="center">
  <%= will_paginate %>
</div>
