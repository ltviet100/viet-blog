<div class="row">

  <div class="col-md-3">
    <%= render 'shared/sidebar-left' %>
  </div>

  <div class="col-md-7">

    <% @articles.each do |article| %>
      <h2><%= link_to article.title, article, id:"title-article" %></h2>
      <p id="more-info">By: <%= article.username if  article.user %> | <%= time_ago_in_words(article.created_at) %> ago</p>
      <p class="article-description"><%= sanitize(article.description) %></p>
      <% if logged_in? && ( current_user == article.user || current_user.admin? ) %>
        <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %>
        <%= link_to 'Remove', article_path(article), method: :delete, data: { confirm: "Are you sure? "}, class: "btn btn-danger"  %>
      <% end %>
      <hr>
    <% end %>
  </div>

  <div class="col-md-2">
    <%= render 'shared/sidebar-right' %>
  </div>
</div>

<div align="center">
  <%= will_paginate %>
</div>
