<h2 class="text-center">Detail Article</h2>
<div class="listing">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="detail-article fit-content">
        <h2><%= @article.title %></h2>
        <%= gravatar_for(@article.user, size: 30) %>
        <span class="more-info">
          Created by: <%= @article.username %> | <%= time_ago_in_words(@article.created_at) %> ago
        </span>

        <% if @article.categories.any? %>
            <p>Categories: <%= render @article.categories %></p>
            <p><%= sanitize(@article.description) %></p>
          <% end %>
        <% if logged_in? && ( current_user == @article.user || current_user.admin? ) %>
          <p>
            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary" %>
            <%= link_to 'Remove', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
