<%= form_for @article do |f| %>
  <%= render 'layouts/error_messages', obj: @article %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.cktext_area :description, rows: 5, class:"form-control" %>
  </div>

  <div><%= f.submit class:"btn btn-primary" %></div>
<% end %>
