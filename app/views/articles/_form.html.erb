<%= form_for @article do |f| %>
  <%= render 'layouts/error_messages', obj: @article %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.cktext_area :description, rows: 5, class:"form-control" %>
  </div>

  <div class="form-group">
    <strong><em>Select category for this article: </em></strong>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |check| %>
      <% check.label(class: "checkbox-inline input_checkbox") { check.check_box( class: "checkbox") + check.text } %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit class:"btn btn-primary" %>
  </div>
  <div class="form-article"></div>
<% end %>
