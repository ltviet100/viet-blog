<div class="text-center">
  <h2>All Categories</h2>
</div>

<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing-user">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to category.name, category_path(category) %></li>
          <li>
            <p><small><%= pluralize(category.articles.count, "article") %></small></p>
          </li>
          <% if logged_in? &&  current_user.admin? %>
            <li><%= link_to 'Edit', edit_category_path(category), class:"btn btn-primary" %></li>
            <li><%= link_to 'Remove', category_path(category), method: :delete, data: { confirm: "Are you sure remove this category and all its articles!" }, class: "btn btn-danger" %>
            </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>

